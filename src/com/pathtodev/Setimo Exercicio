public class Main {

    public static void main(String[] args) {
        // 8 - Exercício – Lista de convidados plus 1: Elabore um algoritmo que armazene em um vetor o nome de até 100
        // convidados de uma festa e exiba o nome dos mesmos.
        //O usuário deveré informar a quantidade de convidados que deverá ser exibida.

        System.out.println("Progrma que mostra nome de ate 100 convidados");
        Scanner entrada = new Scanner(System.in);
        String[] convidados = new String[100];
        int totalConvidados = 0;

        System.out.println("Quantos convidados voce gostaria de adicionar?  Máximo 100 convidados");
        totalConvidados = Integer.parseInt(entrada.nextLine());
        // Laço para impressão do "Quantos convidados
        for (int i = 0; i < totalConvidados; i++) {
            System.out.println("Digite o nome do convidado " + (i + 1));
            convidados[i] = entrada.nextLine();
        }
        for (int a = 0; a < totalConvidados; a++) {
            System.out.println(convidados[a]);

        }
    }
}
