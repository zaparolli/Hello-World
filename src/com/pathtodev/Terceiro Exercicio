public class Main {

    public static void main(String[] args) {
        // 3 - Crie um programa que calcule a média de um aluno para a matéria de matemática.
        // O aluno deve informar seu nome e as quatro notas da matéria.
        Scanner entrada = new Scanner(System.in);
        System.out.println("Digite seu nome.");
        String nome = entrada.nextLine();
        System.out.println("Olá " + nome + " informe as quatro notas da matéria de matemática. ");
        System.out.println(nome + " digite a primeira nota: ");
        double nota1 = entrada.nextDouble();
        System.out.println("Ok, agora digite a segunda nota: ");
        double nota2 = entrada.nextDouble();
        System.out.println("OK, agora digite a terceira nota: ");
        double nota3 = entrada.nextDouble();
        System.out.println("Por ultimo, agora digite a quarta nota: ");
        double nota4 = entrada.nextDouble();
        System.out.println("Otimo " + nome + " agora faremos a média das suas notas!");

        double soma = (nota1 + nota2 + nota3 + nota4);
        double media = soma / 4;
        System.out.println("O somatorio de suas notas é de " + soma + " e a média é de " + media);

    }
}
